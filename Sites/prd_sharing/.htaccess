<IfModule mod_rewrite.c>

## Turn on URL rewriting
RewriteEngine on

## Put your installation directory here:
##RewriteBase /piriyapul/
	RewriteBase /
	
#RewriteCond %{REQUEST_URI} ^system.*
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /index.php/$1 [PT,L]
#  RewriteRule ^(.*)$ index.php?/$1 [L]

## Rewrite all other URLs to index.php/URL
#RewriteCond $1 !^(index\.php|robots\.txt|favicon\.ico)
#RewriteCond %{REQUEST_FILENAME} !-f
#RewriteCond %{REQUEST_FILENAME} !-d
#RewriteRule ^(.*)$ index.php/$1 [PT,L]

## No rewriting
#RewriteCond $1 ^(images|js|css|uploads|log|resource|asset)
#RewriteRule ^(.*)$ - [PT,L]

RewriteCond %{REQUEST_FILENAME} \.(ico|flv|htm|html|php|css|js|jpg|jpeg|gif|png|doc|docx|xls|xlsx|ppt|pptx|pdf|csv|mp3|ogg|mp4|avi|wmv)$
</IfModule>
 
<IfModule !mod_rewrite.c>
  ErrorDocument 404 /index.php
</IfModule>